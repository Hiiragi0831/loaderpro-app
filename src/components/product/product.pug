.product
	.product__main
		.product__gallery
			.product__gallery-main
				.swiper
					.swiper-wrapper
						each slide in [1, 2, 3, 4, 5, 6, 7, 8]
							.swiper-slide
								+picture({
									path: `${baseDir}assets/images/image`,
									ext: 'png',
								})
			.product__gallery-thumb
				.swiper
					.swiper-wrapper
						each slide in [1, 2, 3, 4, 5, 6, 7, 8]
							.swiper-slide
								+picture({
									path: `${baseDir}assets/images/image`,
									ext: 'png',
								})
		.product__info
