extends @pug/base

append globals
	- pageName = 'query'

append vars

block content
	+router(pageName)
		.site
			include @components/header/header
			main.request
				+breadcrumbs()
				section.employee
					.container
						form.page__info
							h2 Форма запроса
							.page__info-item
								.page__info-head
									p Добавить запасти для ТС
								.page__info-row.row-3
									+input({
										type: 'text',
										placeholder: 'Наименование запчасти',
										name: 'titleparts',
									})
									+input({
										type: 'text',
										placeholder: 'Каталожный номер запчасти',
										name: 'numparts',
									})
									+input({
										type: 'text',
										placeholder: 'Количество',
										name: 'count',
									})
								.page__info-row
									+textarea({
										placeholder: 'Комментарий',
										name: 'text',
										rows: '4',
									})
								.page__info-button
									button.button.button__primary Добавить в список
				section.request__data
					.container
						form.request__item
							input(name="titleparts" value="OMR 34672847" readonly )
							input(name="numparts" value="2594981656988" readonly)
							input(name="count" value="2" readonly)
							p Lorem ipsum dolor sit amet, consectetur adipisicing elit. A amet at doloremque exercitationem fugit iure, magni modi natus necessitatibus non perspiciatis, praesentium quia quidem rerum, sequi tenetur ullam veritatis voluptatibus.
							input(name="comment" readonly type="hidden" value="Lorem ipsum dolor sit amet, consectetur adipisicing elit. A amet at doloremque exercitationem fugit iure, magni modi natus necessitatibus non perspiciatis, praesentium quia quidem rerum, sequi tenetur ullam veritatis voluptatibus.")
							.input-upload.input-upload--file(data-upload="file")
								label
									input(type="file" name="file")
									span.button.button__outline Загрузить файл

			+footer()
